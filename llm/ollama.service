[Unit]
Description=Ollama Service
After=network-online.target

[Service]
ExecStart=/usr/local/bin/ollama serve
User=ollama
Group=ollama
Restart=always
RestartSec=3
Environment="PATH=/home/atds/.local/bin:/usr/local/cuda/bin:/usr/local/cuda/bin:/home/atds/.local/bin/:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games:/snap/bin:/usr/local/atds/bin:/home/atds/wrk/git/rg/tool/bin:/usr/local/share/webOS_TV_SDK/CLI/bin/:/usr/local/share/webOS_TV_SDK/IDE/:~/tizen-studio/tools/ide/bin"
Environment="OLLAMA_HOST=http://10.255.240.156:11434"
Environment="OLLAMA_KEEP_ALIVE=300m"
Environment="OLLAMA_MAX_LOADED_MODELS=2"
Environment="OLLAMA_MAX_QUEUE=5"
Environment="OLLAMA_NUM_PARALLEL=1"
Environment="OLLAMA_FLASH_ATTENTION=1"

[Install]
WantedBy=default.target